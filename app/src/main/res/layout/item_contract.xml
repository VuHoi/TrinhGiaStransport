<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="10dp"
app:cardBackgroundColor="#eae1e1"

    android:maxHeight="100dp"

    android:id="@+id/card_view"

    app:cardUseCompatPadding="true"


    android:layout_marginBottom="16dp">
<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:layout_width="wrap_content"
    android:text="Vu Khac Hoi"
    android:textSize="20dp"
    android:padding="10dp"
    android:layout_marginLeft="-10dp"
    android:id="@+id/txtName"

    android:textStyle="bold"
    android:textColor="#000000"
    android:fontFamily="consolas"
    android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="4-7 chá»—"
        android:textSize="20dp"
        android:padding="10dp"

        android:id="@+id/txtchair"
android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="#6e6969"
        android:fontFamily="consolas"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="HN-HCM"
        android:textSize="20dp"

        android:padding="10dp"
android:layout_marginLeft="-10dp"
        android:id="@+id/txtroute"
       android:layout_below="@+id/txtName"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:textColor="#6e6969"
        android:fontFamily="consolas"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="2017-10-2"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_below="@+id/txtName"
        android:id="@+id/txtime"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="#6e6969"
        android:fontFamily="consolas"
        android:layout_height="wrap_content" />
</RelativeLayout>
</android.support.v7.widget.CardView>